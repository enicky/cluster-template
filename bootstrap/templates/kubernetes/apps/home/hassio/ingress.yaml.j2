apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: hassio-service-ingress
  namespace: home
  annotations:
    external-dns.alpha.kubernetes.io/target: "external.#{ bootstrap_cloudflare.domain }#"
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  ingressClassName: external
  rules:
  - host: hassio.#{ bootstrap_cloudflare.domain }#
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: hassio-service
            port:
              name: http



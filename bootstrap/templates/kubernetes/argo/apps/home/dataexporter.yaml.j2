---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: dataexporter
  namespace: home
  annotations:
    argocd.argoproj.io/sync-wave: '0'
spec:
  project: home-kubernetes
  sources:
    - repoURL: #{ bootstrap_github_address }#
      path: kubernetes/apps/home/ai/dataexporter
      targetRevision: #{ bootstrap_github_branch|default('main', true) }#
  destination:
    name: in-cluster
    namespace: network
  syncPolicy:
    automated:
      allowEmpty: true
      prune: true
      selfHeal: true
    syncOptions:
    - CreateNamespace=true
